pipeline {
    agent {label 'georgeJavaNode01'}
    tools { 
        maven 'Maven 3.8.4' 
        jdk 'jdk8' 
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }
        stage('Build') { 
            steps {
                dir("/test01/") {
                sh 'git clone git@github.com:george-palsys/CICD.git'
                }
                dir("/test01/CICD/JenkinsWar") {
                sh 'mvn -B -DskipTests clean package'
                }
            }
        }
    }
}
